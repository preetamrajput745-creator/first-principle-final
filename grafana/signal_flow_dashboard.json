{
    "title": "Signal Flow Panel",
    "uid": "signal_flow_main",
    "panels": [
        {
            "title": "Signals Per Hour",
            "type": "timeseries",
            "targets": [
                {
                    "expr": "sum(increase(signals_total[1h])) by (symbol)",
                    "legendFormat": "{{symbol}}"
                }
            ],
            "tooltip": {
                "mode": "single",
                "sort": "none"
            }
        },
        {
            "title": "Average Score Per Hour",
            "type": "timeseries",
            "targets": [
                {
                    "expr": "avg_over_time(signal_score_sum[1h]) / avg_over_time(signal_score_count[1h])",
                    "legendFormat": "{{symbol}}"
                }
            ]
        },
        {
            "title": "Score Distribution (Histogram)",
            "type": "heatmap",
            "targets": [
                {
                    "expr": "sum(rate(signal_score_bucket[5m])) by (le)",
                    "format": "heatmap"
                }
            ]
        }
    ]
}