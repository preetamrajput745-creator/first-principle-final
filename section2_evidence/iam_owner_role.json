{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:PutObjectAcl",
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::antigravity-audit/*/roles/*",
                "arn:aws:s3:::antigravity-audit/*/critical/*"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "kms:Sign",
                "kms:Verify"
            ],
            "Resource": "arn:aws:kms:us-east-1:123456789012:key/owner-sign-off-key",
            "Condition": {
                "Bool": {
                    "aws:MultiFactorAuthPresent": "true"
                }
            }
        }
    ]
}