{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "DenyOverwriteAndDelete",
            "Effect": "Deny",
            "Principal": "*",
            "Action": [
                "s3:DeleteObject",
                "s3:DeleteObjectVersion",
                "s3:PutObject"
            ],
            "Resource": "arn:aws:s3:::your-raw-data-bucket/*",
            "Condition": {
                "StringNotEquals": {
                    "s3:x-amz-server-side-encryption": "AES256"
                }
            }
        },
        {
            "Sid": "AllowAppendedWritesOnlyThroughVersioning",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::ACCOUNT_ID:role/IngestServiceRole"
            },
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::your-raw-data-bucket/*",
            "Condition": {
                "StringEquals": {
                    "s3:x-amz-acl": "bucket-owner-full-control"
                }
            }
        }
    ]
}