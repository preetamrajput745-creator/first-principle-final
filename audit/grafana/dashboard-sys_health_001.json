[
    {
        "id": null,
        "uuid": "sys_health_001",
        "title": "System Health Panel",
        "timezone": "browser",
        "panels": [
            {
                "title": "Heartbeat Status",
                "type": "stat",
                "targets": [
                    {
                        "expr": "time() - max(heartbeat_timestamp{component!=\"ignore\"}) by (component)"
                    }
                ],
                "thresholds": {
                    "steps": [
                        {
                            "color": "green",
                            "value": null
                        },
                        {
                            "color": "red",
                            "value": 30
                        }
                    ]
                }
            },
            {
                "title": "CPU Usage",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "process_cpu_seconds_total"
                    }
                ]
            },
            {
                "title": "Memory Usage",
                "type": "timeseries",
                "targets": [
                    {
                        "expr": "process_resident_memory_bytes"
                    }
                ]
            },
            {
                "title": "Latency Heatmap",
                "type": "heatmap",
                "targets": [
                    {
                        "expr": "sum(rate(latency_ingest_bar_bucket[5m])) by (le)"
                    }
                ]
            }
        ]
    }
]