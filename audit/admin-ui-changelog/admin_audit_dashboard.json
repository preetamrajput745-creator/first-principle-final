[
    {
        "id": null,
        "uuid": "admin_audit_006",
        "title": "Admin Activity & Audit Log",
        "timezone": "browser",
        "panels": [
            {
                "title": "Recent Changes (Live Stream)",
                "type": "logs",
                "targets": [
                    {
                        "expr": "{job=\"audit_service\"}"
                    }
                ]
            },
            {
                "title": "Change Volume (Last 1h)",
                "type": "stat",
                "targets": [
                    {
                        "expr": "sum(increase(audit_changes_total[1h]))"
                    }
                ]
            },
            {
                "title": "Pending Approvals Queue",
                "type": "gauge",
                "targets": [
                    {
                        "expr": "audit_pending_requests"
                    }
                ],
                "thresholds": {
                    "steps": [
                        {
                            "color": "green",
                            "value": 0
                        },
                        {
                            "color": "red",
                            "value": 5
                        }
                    ]
                }
            },
            {
                "title": "Verification Failures (Tamper Evident)",
                "type": "stat",
                "targets": [
                    {
                        "expr": "audit_signature_failures_total"
                    }
                ],
                "thresholds": {
                    "steps": [
                        {
                            "color": "green",
                            "value": 0
                        },
                        {
                            "color": "red",
                            "value": 1
                        }
                    ]
                }
            }
        ]
    }
]